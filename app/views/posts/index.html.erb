<div class="users-list">
 <div class="single-user">
<div class="user-image"></div>
<div class="user-data">
<div class="user-username"><%= @user.name %></div>
<div class="user-posts">number of posts: 
<% if @user.posts_counter.to_i > 0 %>
  <%= @user.posts_counter %>
<% else %>
  0
<% end %>
</div>
</div>

</div>
<% @user_posts.each do |post| %>
  <a href='/users/<%= post.user_id %>/posts/<%= post.id %>' class='user-link'><div class="single-post">
<h4>Post <%= post.id %> - <%= post.title %> comments: <%= post.comments_counter %>, likes: <%= post.likes_counter %></h4>
<h4><%= post.title %></h4>
<p><%= post.text %></p>
<p style="socials">comments:<% if post.comments_counter.to_i > 0 %>
  <%= post.comments_counter %>
<% else %>
  0
<% end %>
, likes :<% if post.likes_counter.to_i > 0 %>
  <%= post.likes_counter %>
<% else %>
  0
<% end %> 
</div><div class="single-post">
<h3>
Comments
</h3>
<% post.recent_comments.each do |comment|%>
<%= comment.author.name %>: <%= comment.text %> <br>

<% end %></div>
</a>
<% end %>

<%= link_to "Add new post", new_user_post_path(@user), class: "add-new-post" %>
