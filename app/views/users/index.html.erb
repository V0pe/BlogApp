<div class="users-body">
 <a href='/new' class='view-all'>Add Post</a>
<% @users.each do |user| %>
  <a href='/users/<%= user.id %>' class='user-link'>
    <div class=single-user>
    <div class=user-image></div>
    <div class=user-details>
      <div class="user-username"><%= user.name %></div>
      <div class="user-posts-count">number of posts: 
        <% if user.posts_counter.to_i > 0 %>
          <%= user.posts_counter %>
        <% else %>
          0
        <% end %>
      </div>
    </div>
    </div>
  </a>
<% end %>
</div>
